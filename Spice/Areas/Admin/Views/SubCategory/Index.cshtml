@model IEnumerable<SubCategory>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<div class="border backgroundWhite">
	<div class="row">
		<div class="col-6">
			<h2 class="text-info">SubCategory List</h2>
		</div>
		<div class="col-6 text-end">
			<partial name="_CreateButtonPartial" />
		</div>
	</div>
	<br />
	
	<div>
		@if (Model.Count() > 0)
		{  
			<table class="table table-hover border">
				<tr class="table-secondary">
					<th>
						@Html.DisplayNameFor(m=>m.Name)
					</th>
					<th>
						@Html.DisplayNameFor(m=>m.Category.Name)
					</th>
					<th>
						
					</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>
							@Html.DisplayFor(m=>item.Name)
						</td>
						<td>
							@Html.DisplayFor(m=>item.Category.Name)
						</td>
						<partial name="_TableButtonPartial" model="item.Id" />
					</tr>
				}
			</table>
		}
		else
		{
			<p class="text-center">No Category Exits...</p>
		}
	</div>
</div>